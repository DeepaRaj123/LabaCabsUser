<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger blue circle in back -->

    <!-- Smaller red circle in front -->
    <item>
        <shape android:shape="oval">
            <!-- transparent stroke = larger_circle_size - smaller_circle_size -->
            <stroke android:color="@color/colorPrimary"
                android:width="8dp"/>
            <solid android:color="@color/white"/>
            <size
                android:width="@dimen/_16sdp"
                android:height="@dimen/_16sdp"/>

            <padding android:bottom="@dimen/_5sdp"
                android:top="@dimen/_5sdp"
                android:left="@dimen/_5sdp"
                android:right="@dimen/_5sdp"/>
        </shape>
    </item>
</layer-list>