<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clipToPadding="false"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_15ssp"
        android:text="Ride Booked Successfully"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_20"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_15ssp"
        android:text="Your ride was scheduled successfully. Open your upcoming trips for more details."
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/text_14" />

    <Button
        android:id="@+id/confirm"
        style="@style/MyButton.Primary"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/sfui_regular"
        android:text="OK"
        android:textAllCaps="true"
        android:textColor="@color/white" />
</LinearLayout>